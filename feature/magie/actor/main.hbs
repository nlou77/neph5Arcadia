<img src="systems/neph5e/assets/core/top-incarnations.webp" style="border:0px;width:814px;height:98px"/>

<div style="width:100%;margin-top:10px;">
    <div style="margin-left:auto;margin-right:auto;width:100%;display:flex; flex-direction: row; font-family: 'Modesto Condensed', 'Palatino Linotype', 'serif'; font-size: 25px; font-weight:bold;background-color: transparent;border: 0px;">
        {{#with actor.voieMagique}}
        <label style="padding-bottom:3px; border: none; background-color: transparent; width:100%; text-align: center;">{{name}}</label>
        {{/with}}
    </div>
</div>

{{#if (displaySciences actor 'basseMagie' 'hauteMagie' 'grandSecret')}}
<ol class="item-list">

    {{#if (displayScience actor "basseMagie")}}
    {{#with (science actor "basseMagie") as |degre|}}
        {{> "systems/neph5e/feature/magie/actor/header.hbs" cercle="Basse Magie" degre=degre cercle-id="basseMagie" sciencesOccultes=../sciencesOccultes}}
        {{#each (focus ../actor 'basseMagie') as |item|}}
            {{> "systems/neph5e/feature/magie/actor/sort.hbs" item=item degre=degre}}
        {{/each}}
    {{/with}}
    {{/if}}

    {{#if (displayScience actor "hauteMagie")}}
    {{#with (science actor "hauteMagie") as |degre|}}
        {{> "systems/neph5e/feature/magie/actor/header.hbs" cercle="Haute Magie" degre=degre cercle-id="hauteMagie" sciencesOccultes=../sciencesOccultes}}
        {{#each (focus ../actor 'hauteMagie') as |item|}}
            {{> "systems/neph5e/feature/magie/actor/sort.hbs" item=item degre=degre}}
        {{/each}}
    {{/with}}
    {{/if}}

    {{#if (displayScience actor "grandSecret")}}
    {{#with (science actor "grandSecret") as |degre|}}
        {{> "systems/neph5e/feature/magie/actor/header.hbs" cercle="Grand Secret" degre=degre cercle-id="grandSecret" sciencesOccultes=../sciencesOccultes}}
        {{#each (focus ../actor 'grandSecret') as |item|}}
            {{> "systems/neph5e/feature/magie/actor/sort.hbs" item=item degre=degre}}
        {{/each}}
    {{/with}}
    {{/if}}

</ol>

{{else}}
<div style="display:flex; flex-direction:column; margin-top:200px; text-align: center; color:indianred">
    <label style="margin-left:100px;margin-right:100px;">{{localize 'NEPH5E.aideFocus'}}</label>
    <i style="margin-top:50px;" class="fas fa-arrow-alt-circle-down fa-2xl"></i>
</div>
{{/if}}