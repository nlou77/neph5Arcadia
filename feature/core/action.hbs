<form class="flexcol">

    <div class="flexrow" style="align-items: center; background-color: rgba(0, 0, 0, 0.2); border-radius: 4px; margin: 10px;">
        <img style="margin: 10px; height: 50px; width: 50px; border: none;flex: 0;" src="{{actor.img}}"/>
        <span style="font-size: 14px;font-style: bold;text-align: center;flex: 1;font-family:'Modesto Condensed','Palatino Linotype','serif';font-size:18px;">{{sentence}}</span>
        <img style="margin: 10px; height: 50px; width: 50px; border: none;flex: 0; border-radius: 4px;" src="{{img}}"/>
    </div>

    <div class="flexrow">

        <span id="difficulty" style="flex: 0 0 auto; padding-left:70px;padding-top: 4px;padding-right:10px;">{{difficulty}}%</span>

        <div class="item-control" style="flex: 0 0 auto; width:20px; padding-top: 5px;padding-right:100px;">
            <a id="roll"><i class="fas fa-dice-d20"></i></a>
        </div>

        <div class="flexrow" style="margin-left:20px">

            {{#switch type}}
            {{#case 'none'}}
            <select id="rollType" name="rollType" style="flex: 0 0 auto;width:100px;border:none;outline:0px;background-color:transparent;">
                <option value="simple">{{localize 'NEPH5E.jetSimple'}}</option>
                <option value="opposed">{{localize 'NEPH5E.jetOppose'}}</option>
            </select>
            {{/case}}
            {{#case 'simple'}}
            <select id="rollType" name="rollType" style="flex: 0 0 auto;width:100px;border:none;outline:0px;background-color:transparent;" disabled>
                <option value="simple">{{localize 'NEPH5E.jetSimple'}}</option>
            </select>
            {{/case}}
            {{#case 'opposed'}}
            <select id="rollType" name="rollType" style="flex: 0 0 auto;width:100px;border:none;outline:0px;background-color:transparent;" disabled>
                <option value="opposed">{{localize 'NEPH5E.jetOppose'}}</option>
            </select>
            {{/case}}
            {{/switch}}

            {{#if selectElement}}
            <span style="flex: 0 0 auto; margin-left:67px; margin-right:5px; padding-top:5px;">El√©ment:</span>
            <select id="element" name="element" style="flex: 0 0 auto; border:none; outline:0px; background-color:transparent; width:80px;">
                {{#each elements as |name label|}}
                <option value="{{label}}">{{localize name}}</option>
                {{/each}}
            </select>
            {{/if}}

        </div>

    </div>

    <table style="width:100%; table-layout: fixed;">

        <tr style="height:35px;">
            <td style="width:65%; text-align:left; padding-left:20px;">{{base.name}}</th>
            <td id="base" style="width:25%; text-align:right; flex: 0 0 auto;">{{base.difficulty}}</th>
            <td style="width:10%; text-align: left; flex: 0 0 auto; padding-top:5px; flex: 0 0 auto; width:auto;">%</td>
        </tr>

        <tr style="height:35px;">
            <td style="width:65%; text-align:left; padding-left:20px;">Modificateur</td>
            <td style="width:25%; text-align:right; flex: 0 0 auto;">
                <input id="modifier" type="Number" value="0" style="text-align:right; margin-right:-3px;border:none; background-color:transparent;"/>
            </td>
            <td style="width:10%; text-align: left; flex: 0 0 auto; padding-top:5px; flex: 0 0 auto; width:auto;">%</td>
        </tr>

        {{#unless (eq blessures 0)}}
        <tr style="height:35px;">
            <td>
                <select id="blessures" name="blessures" style="padding-left:15px; flex: 0 0 auto; border:none; outline:0px; background-color:transparent;">
                    <option value="apply">Appliquer les blessures</option>
                    <option value="ignore">Ignorer les blessures</option>
                </select>
            </td>
            <td id="blessuresModifier" style="width:25%; text-align:right; flex: 0 0 auto;">{{blessures}}</td>
            <td style="width:10%; text-align: left; flex: 0 0 auto; padding-top:5px; flex: 0 0 auto; width:auto;">%</td>
        </tr>
        {{/unless}}

        {{#if (nonNull approches)}}
        <tr style="height:35px;">
            <td>
                <select id="approche" name="approche" style="padding-left:15px; flex: 0 0 auto; border:none; outline:0px; background-color:transparent;">
                    {{#each approches as |approche|}}
                    <option value="{{approche.name}}">{{approche.label}}</option>
                    {{/each}}
                </select>
            </td>
            <td id="approcheModifier" style="width:25%; text-align:right; flex: 0 0 auto;">0</td>
            <td style="width:10%; text-align: left; flex: 0 0 auto; padding-top:5px; flex: 0 0 auto; width:auto;">%</td>
        </tr>
        {{/if}}

    </table>

</form>