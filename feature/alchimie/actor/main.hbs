<img src="systems/neph5e/assets/core/top-incarnations.webp" style="border:0px;width:814px;height:98px"/>

<div style="width:100%;margin-top:10px;">
    <div style="margin-left:auto;margin-right:auto;width:100%;display:flex; flex-direction: row; font-family: 'AJensonPro'; font-size: 25px; font-weight:bold;background-color: transparent;border: 0px;">
        {{#with actor.voieAlchimique}}
        <label style="padding-bottom:3px; border: none; background-color: transparent; width:100%; text-align: center;">{{name}}</label>
        {{/with}}
    </div>
</div>

{{#if (displaySciences actor 'oeuvreAuNoir' 'oeuvreAuBlanc' 'oeuvreAuRouge')}}
<ol class="item-list">

    {{#if (displayScience actor "oeuvreAuNoir")}}
    {{#with (science actor "oeuvreAuNoir") as |degre|}}
        {{> "systems/neph5e/feature/alchimie/actor/header.hbs" cercle="Oeuvre au noir" degre=degre cercle-id="oeuvreAuNoir" sciencesOccultes=../sciencesOccultes}}
        {{#each (focus ../actor 'oeuvreAuNoir') as |item|}}
            {{> "systems/neph5e/feature/alchimie/actor/formule.hbs" item=item degre=degre}}
        {{/each}}
    {{/with}}
    {{/if}}

    {{#if (displayScience actor "oeuvreAuBlanc")}}
    {{#with (science actor "oeuvreAuBlanc") as |degre|}}
        {{> "systems/neph5e/feature/alchimie/actor/header.hbs" cercle="Oeuvre au blanc" degre=degre cercle-id="oeuvreAuBlanc" sciencesOccultes=../sciencesOccultes}}
        {{#each (focus ../actor 'oeuvreAuBlanc') as |item|}}
            {{> "systems/neph5e/feature/alchimie/actor/formule.hbs" item=item degre=degre}}
        {{/each}}
    {{/with}}
    {{/if}}

    {{#if (displayScience actor "oeuvreAuRouge")}}
    {{#with (science actor "oeuvreAuRouge") as |degre|}}
        {{> "systems/neph5e/feature/alchimie/actor/header.hbs" cercle="Oeuvre au rouge" degre=degre cercle-id="oeuvreAuRouge" sciencesOccultes=../sciencesOccultes}}
        {{#each (focus ../actor 'oeuvreAuRouge') as |item|}}
            {{> "systems/neph5e/feature/alchimie/actor/formule.hbs" item=item degre=degre}}
        {{/each}}
    {{/with}}
    {{/if}}

</ol>

{{else}}
<div style="display:flex; flex-direction:column; margin-top:200px; text-align: center; color:indianred">
    <label style="margin-left:100px;margin-right:100px;">{{localize 'NEPH5E.aideFocus'}}</label>
    <i style="margin-top:50px;" class="fas fa-arrow-alt-circle-down fa-2xl"></i>
</div>
{{/if}}