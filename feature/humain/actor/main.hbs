<div class="humain">

    <div class="header">

        <img class="puce"/>

        <img class="separator"/>

        <span class="name">{{localize "NEPH5E.soleil"}}</span>

    </div>

    <div class="body">

        <img src="systems/neph5e/assets/core/soleil.webp"/>

        <ol class="elements">

            <li class="element macro soleil" data-macro="ka" data-id="soleil">
                <img class="circle"/>
                <a class="dice"><i class="fas fa-dice-d20"></i></a>
                <div class="tooltip">
                    <input
                        {{#if actor.locked}}disabled{{/if}}
                        name="system.ka.soleil"
                        type="text"
                        value="{{system.ka.soleil}}"
                        data-dtype="Number"/>
                    <span class="tooltiptext">{{localize "NEPH5E.soleil"}}</span>
                </div>
            </li>

        </ol>

    </div>

</div>