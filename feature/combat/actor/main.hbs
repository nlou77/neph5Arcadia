<div class="combat">

    <div class="left">

        <div class="dommages">

            <img class='triangle'/>

            <ol>

                <li>{{localize "NEPH5E.dommages"}}</li>

                <li>{{localize "NEPH5E.mineure"}}</li>

                <li>{{localize "NEPH5E.serieuse"}}</li>

                <li>{{localize "NEPH5E.mineure"}}</li>

                <li>{{localize "NEPH5E.mortelle"}}</li>

            </ol>

            <div class="physiques">

                <div class="header">

                    <img class="puce"/>

                    <img class="separator"/>

                    <span class="name">{{localize "NEPH5E.physique"}}</span>

                </div>

                <div class="modifier">

                    <img class="circle"/>

                    <label>-50%</label>

                </div>
                
                <ol class="body">

                    <li class="checkboxes">

                        {{#if (gt system.ka.terre 9)}}
