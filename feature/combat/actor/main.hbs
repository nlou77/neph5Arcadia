        <div class="armes">

            <div class="header">

                <img class="puce"/>

                <img class="separator"/>

                <span class="name">{{localize "NEPH5E.arme"}}</span>

            </div>

            <ol>

                <li class="macro" data-id="wrestle" data-macro="wrestle">

                    <i class="delete"></i>

                    <label class="name">{{localize "NEPH5E.lutte"}}</label>

                    <i class="reload"></i>

                    <i class="aim"></i>

                    <i class="roll fas fa-dice-d20 {{#unless (eq actor.lutteCanBePerformed true)}}grey{{/unless}}"></i>

                    <i class="usage fa-solid fa-hand-fist"></i>

                </li>

                {{#with actor.weapons as |weapons|}}

                {{#each weapons.naturelle as |item|}}
                <li class="macro" data-id="{{item.id}}" data-macro="item">

                    <i class="delete fas fa-trash"></i>

                    <label class="open name">{{item.name}}</label>

                    <i class="reload"></i>

                    <i class="aim"></i>

                    <i class="roll fas fa-dice-d20 {{#if (eq item.attackAvailable false) }}grey{{/if}}"></i>

                    <i class="usage fa-solid fa-hand-fist"></i>

                </li>
                {{/each}}

                {{#each weapons.melee as |item|}}
                <li class="macro" data-id="{{item.id}}" data-macro="item">

                    <i class="delete fas fa-trash"></i>
                    
                    <label class="open name">{{item.name}}</label>
                    
                    <i class="reload"></i>

                    <i class="aim"></i>

                    <i class="roll fas fa-dice-d20 {{#if (eq item.attackAvailable false) }}grey{{/if}}"></i>

                    <i class="usage {{#if item.system.used}}{{#if item.system.parade}}fas fa-shield-alt{{else}}fa-solid fa-sword{{/if}}{{else}}far fa-hand-paper{{/if}}"></i>

                {{/each}}

                {{#each weapons.trait as |item|}}
                <li class="macro" data-id="{{item.id}}" data-macro="item">

                    <i class="delete fas fa-trash"></i>

                    <label class="open name">{{item.name}}</label>

                    <i class="reload"></i>

                    <div class="tooltip aim">
                        <i class="fas fa-crosshairs {{#if (eq item.aimAvailable false) }}grey{{/if}}"></i>
                        <div class="tooltiptext">
                            <label>Visée: {{item.system.visee}}/3</label>
                        </div>
                    </div>

                    <i class="roll fas fa-dice-d20 {{#if (eq item.attackAvailable false) }}grey{{/if}}"></i>

                    <i class="usage {{#if item.system.used}}fa-solid fa-bow-arrow{{else}}far fa-hand-paper{{/if}}"></i>

                </li>
                {{/each}}

                {{#each weapons.feu as |item|}}
                <li class="macro" data-id="{{item.id}}" data-macro="item">

                    <i class="delete fas fa-trash"></i>

                    <label class="open name">{{item.name}}</label>

                    <div class="tooltip reload">
                        <i class="fas fa-spinner {{#if (eq item.reloadAvailable false) }}grey{{/if}}"></i>
                        <div class="tooltiptext">
                            <label>Munitions: {{minus item.system.munitions item.system.tire}}/{{item.system.munitions}}</label>
                        </div>
                    </div>

                    <div class="tooltip aim">
                        <i class="fas fa-crosshairs {{#if (eq item.aimAvailable false) }}grey{{/if}}"></i>
                        <div class="tooltiptext">
                            <label>Visée: {{item.system.visee}}/3</label>
                        </div>
                    </div>

                    <i class="roll fas fa-dice-d20 {{#if (eq item.attackAvailable false) }}grey{{/if}}"></i>

                    <i class="usage {{#if item.system.used}}fa-duotone fa-gun{{else}}far fa-hand-paper{{/if}}"></i>

                </li>
                {{/each}}

                {{/with}}

            </ol>

        </div>

