<form class="combat">

    <div class="header">
        <img src="{{actor.img}}"/>
        <span>{{sentence}}</span>
        {{#unless (isNull img)}}
        <img src="{{img}}"/>
        {{/unless}}
    </div>

    <div class="body">

        <div class="roll">

            <div class="parameters">

                <div class="impact">
                    <div id="impact">{{impact}}</div>
                    <div class="heart">
                        <i class="fas fa-heart-broken"></i>
                    </div>
                </div>

                <div class="type">

                    {{#switch type}}
                    {{#case 'none'}}
                    <select id="rollType" name="rollType">
                        <option value="opposed">{{localize 'NEPH5E.jetOppose'}}</option>
                        <option value="simple">{{localize 'NEPH5E.jetSimple'}}</option>
                    </select>
                    {{/case}}
                    {{#case 'simple'}}
                    <select id="rollType" name="rollType" disabled>
                        <option value="simple">{{localize 'NEPH5E.jetSimple'}}</option>
                    </select>
                    {{/case}}
                    {{#case 'opposed'}}
                    <select id="rollType" name="rollType" disabled>
                        <option value="opposed">{{localize 'NEPH5E.jetOppose'}}</option>
                    </select>
                    {{/case}}
                    {{/switch}}

                </div>

                <div id="details" class="item-control">
                    <span><i class="fas fa-search"></i></span>
                </div>

            </div>

            <div class="dice">
                <a id="roll"><i class="fas fa-dice-d20"></i></a>
                <label id="difficulty">{{difficulty}}%</label>
            </div>

        </div>

        <div class="lines">

            <div class="line">
                <td class="manoeuver">
                    <select id="manoeuver" name="manoeuver">
                        {{#each manoeuvers as |manoeuver|}}
                        <option
                            {{#if (eq manoeuver.id 'tirer')}}
                            selected
                            {{/if}}
                            value="{{manoeuver.id}}">{{manoeuver.name}}</option>
                        {{/each}}
                    </select>
                    <div id='times'>
                        <i id='shot-1' style='visibility:hidden' class='fas fa-crosshairs checked'></i>
                        <label class='dommage-checkbox' id='shot-2' style='visibility:hidden'> 
                            <input class='item-checkbox' id='shot2' type='checkbox' data-dtype='Boolean'/>
                            <i class='far fa-circle unchecked'></i>
                            <i class='fas fa-crosshairs checked'></i>
                        </label>
                        <label class='dommage-checkbox' id='shot-3' style='visibility:hidden'> 
                            <input class='item-checkbox' id='shot3' type='checkbox' data-dtype='Boolean'/>
                            <i class='far fa-circle unchecked'></i>
                            <i class='fas fa-crosshairs checked'></i>
                        </label>
                        <label class='dommage-checkbox' id='shot-4' style='visibility:hidden'> 
                            <input class='item-checkbox' id='shot4' type='checkbox' data-dtype='Boolean'/>
                            <i class='far fa-circle unchecked'></i>
                            <i class='fas fa-crosshairs checked'></i>
                        </label>
                        <label class='dommage-checkbox' id='shot-5' style='visibility:hidden'> 
                            <input class='item-checkbox' id='shot5' type='checkbox' data-dtype='Boolean'/>
                            <i class='far fa-circle unchecked'></i>
                            <i class='fas fa-crosshairs checked'></i>
                        </label>
                    </div>
                </td>
                <td id="manoeuverModifier">0</td>
                <td>%</td>
            </div>

            <div class="line">
                <td class="label">Modificateur</td>
                <td id="manoeuverModifier">
                    {{#if (eq (getSystemOption 'modifierPolicy') 'clavier')}}
                    <input id="modifier" type="Number" value="0"/>
                    {{else}}
                    <select id="modifier">
                        <option value="50">50</option>
                        <option value="40">40</option>
                        <option value="30">30</option>
                        <option value="20">20</option>
                        <option value="10">10</option>
                        <option value="0">0</option>
                        <option value="-10">-10</option>
                        <option value="-20">-20</option>
                        <option value="-30">-30</option>
                        <option value="-40">-40</option>
                        <option value="-50">-50</option>
                    </select>
                    {{/if}}
                </td>
                <td>%</td>
            </div>

            {{#unless (eq blessures 0)}}
            <div class="line">
                <div class="line-title">
                    <select id="blessures" name="blessures">
                        <option value="apply">{{localize 'NEPH5E.appliquerBlessures'}}</option>
                        <option value="ignore">{{localize 'NEPH5E.ignorerBlessures'}}</option>
                    </select>
                </div>
                <div class="line-value">
                    <label id="blessuresModifier">{{blessures}}</label>
                    <label class="base-percentage">%</label>
                </div>
            </div>
            {{/unless}}

            {{#if (nonNull approches)}}
            <div class="line">
                <div class="line-title">
                    <select id="approche" name="approche">
                        {{#each approches as |approche|}}
                        <option value="{{approche.name}}">{{approche.label}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="line-value">
                    <label id="approcheModifier">{{blessures}}</label>
                    <label class="base-percentage">%</label>
                </div>
            </div>
            {{/if}}

            <div class="line hiddable" style="display:none;">
                <div class="line-title">
                    <label>{{localize "NEPH5E.manoeuvres.viser.name"}}</label>
                </div>
                <div class="line-value">
                    <label id="visee">{{visee}}</label>
                    <label class="base-percentage">%</label>
                </div>
            </div>

            <div class="line hiddable" style="display:none;">
                <td id="vecu" class="label">{{base.name}}</td>
                <td id="base">{{base.difficulty}}</td>
                <td>%</td>
            </div>

            {{#if (nonNull onGround)}}
            <div class="line hiddable" style="display:none;">
                <td class="label">{{localize onGround.label}}</td>
                <td>{{onGround.modifier}}</td>
                <td>%</td>
            </div>
            {{/if}}

            {{#if (nonNull foeOnGround)}}
            <div class="line hiddable" style="display:none;">
                <td class="label">{{localize foeOnGround.label}}</td>
                <td>{{foeOnGround.modifier}}</td>
                <td>%</td>
            </div>
            {{/if}}

            {{#if (nonNull stunned)}}
            <div class="line hiddable" style="display:none;">
                <td class="label">{{localize stunned.label}}</td>
                <td>{{stunned.modifier}}</td>
                <td>%</td>
            </div>
            {{/if}}

            {{#if (and (nonNull weapon) (ne weapon.system.attack 0))}}
            <div class="line hiddable" style="display:none;">
                <td class="label">{{weapon.name}}</td>
                <td>{{weapon.system.attack}}0</td>
                <td>%</td>
            </div>
            {{/if}}

        </div>

        <div class="hiddable">
            <p id="description">{{localize "NEPH5E.manoeuvres.tirer.description"}}</p>
        </div>

    </div>

</form>