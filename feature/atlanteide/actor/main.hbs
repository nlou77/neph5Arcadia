{{#if (displaySciencesOf actor 'rituel' true)}}
<ol class="item-list">
    {{#each (cerclesOf 'rituel' false) as |name key|}}
        {{#if (displayScience ../actor key)}}
        {{#with (science ../actor key) as |degre|}}
            {{> "systems/neph5e/feature/epee/actor/header.hbs" cercle=name degre=degre cercle-id=key sciencesOccultes=../../sciencesOccultes}}
            {{#each (focus ../../actor key) as |item|}}
              {{> "systems/neph5e/feature/epee/actor/rituel.hbs" item=item degre=degre}}
            {{/each}}
        {{/with}}
        {{/if}}
    {{/each}}
</ol>
{{else}}
    {{> "systems/neph5e/templates/actor/parts/nofocus.hbs"}}
{{/if}}