<div class="options">

    <div class="options-column">

        <div class="options-group">

            <div class="header">

                <img class="puce"/>

                <img class="separator"/>

                <span class="options-name">{{localize "NEPH5E.fraternite"}}</span>

            </div>

            <ol class="body">

                {{> "systems/neph5e/templates/actor/parts/option.hbs" label="NEPH5E.active" name="system.options.active" value=system.options.active}}

            </ol>

        </div>

    </div>

    <div class="options-column">

        <div class="options-group">

            <div class="header">

                <img class="puce"/>

                <img class="separator"/>

                <span class="options-name">{{localize "NEPH5E.affichage"}}</span>

            </div>

            <ol class="body">

                {{> "systems/neph5e/templates/actor/parts/option.hbs" label="NEPH5E.chronologieDescendante" name="system.options.chronologieDescendante" value=system.options.chronologieDescendante}}

                <li class="option">

                    <label class="option-checkbox">
                        <input
                            {{#if system.options.incarnationsOuvertes}}checked{{/if}}
                            name="system.options.incarnationsOuvertes"
                            type="checkbox"
                            class="incarnationsOuvertes"
                            data-dtype="Boolean"/>
                        <i class="far fa-circle unchecked"></i>
                        <i class="fas fa-circle checked"></i>
                    </label>

                    <label>{{localize "NEPH5E.incarnationsOuvertes"}}</label>

                </li>

                {{> "systems/neph5e/templates/actor/parts/option.hbs" label="NEPH5E.locked" name="system.options.locked" value=system.options.locked}}

            </ol>

        </div>

    </div>

</div>