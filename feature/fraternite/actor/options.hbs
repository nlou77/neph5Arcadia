<div class="options">

    <div class="options-column">

        <div class="options-group">

            <div class="header">

                <img class="puce"/>

                <img class="separator"/>

                <span class="options-name">{{localize "NEPH5E.affichage"}}</span>

            </div>

            <ol class="body">

                {{> "systems/neph5e/templates/actor/parts/option.hbs" label="NEPH5E.chronologieDescendante" name="system.options.chronologieDescendante" value=system.options.chronologieDescendante}}

                <li class="option">

                    <label class="option-checkbox">
                        <input
                            {{#if system.options.incarnationsOuvertes}}checked{{/if}}
                            name="system.options.incarnationsOuvertes"
                            type="checkbox"
                            class="incarnationsOuvertes"
                            data-dtype="Boolean"/>
                        <i class="far fa-circle unchecked"></i>
                        <i class="fas fa-circle checked"></i>
                    </label>

                    <label>{{localize "NEPH5E.incarnationsOuvertes"}}</label>

                </li>

                {{> "systems/neph5e/templates/actor/parts/option.hbs" label="NEPH5E.locked" name="system.options.locked" value=system.options.locked}}

            </ol>

        </div>

        <div class="options-group">

            <div class="header">

                <img class="puce"/>

                <img class="separator"/>

                <span class="options-name">{{localize "NEPH5E.mondeOcculte"}}</span>

            </div>

            <ol class="body">

                {{> "systems/neph5e/templates/actor/parts/option.hbs" label="NEPH5E.fraterniteActive" name="system.options.active" value=system.options.active}}

            </ol>

        </div>

    </div>

    <div class="options-column">

        <div class="options-group">

            <div class="header">

                <img class="puce"/>

                <img class="separator"/>

                <label class="options-name">{{localize "NEPH5E.theme"}}</label>

            </div>

            <fieldset class="body">

                <div class="option">
                    <input class="theme option-checkbox" type="radio" name="system.options.theme" value="air" {{#if (eq system.options.theme "air")}}checked{{/if}}>
                    <label for="system.options.theme"><i class="fa-solid fa-person-digging"></i> Air</label>
                </div>

                <div class="option">
                    <input class="theme option-checkbox" type="radio" name="system.options.theme" value="eau" {{#if (eq system.options.theme "eau")}}checked{{/if}}/>
                    <label for="system.options.theme"><i class="fa-solid fa-person-digging"></i> Eau</label>
                </div>

                <div class="option">
                    <input class="theme option-checkbox" type="radio" name="system.options.theme" value="feu" {{#if (eq system.options.theme "feu")}}checked{{/if}}/>
                    <label for="system.options.theme">Feu</label>
                </div>

                <div class="option">
                    <input class="theme option-checkbox" type="radio" name="system.options.theme" value="lune" {{#if (eq system.options.theme "lune")}}checked{{/if}}/>
                    <label for="system.options.theme">Lune</label>
                </div>

                <div class="option">
                    <input class="theme option-checkbox" type="radio" name="system.options.theme" value="lune-noire" {{#if (eq system.options.theme "lune-noire")}}checked{{/if}}/>
                    <label for="system.options.theme">Lune noire</label>
                </div>

                <div class="option">
                    <input class="theme option-checkbox" type="radio" name="system.options.theme" value="soleil" {{#if (eq system.options.theme "soleil")}}checked{{/if}}/>
                    <label for="system.options.theme">Soleil</label>
                </div>

                <div class="option">
                    <input class="theme option-checkbox" type="radio" name="system.options.theme" value="terre" {{#if (eq system.options.theme "terre")}}checked{{/if}}/>
                    <label for="system.options.theme">Terre</label>
                </div>

            </fieldset>

        </div>

    </div>

</div>