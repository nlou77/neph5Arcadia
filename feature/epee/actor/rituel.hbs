<li class="item" data-item-id="{{rituel.refid}}" data-item-science="epee" data-item-collection="rituels">

    <input
        name="system.epee.rituels.[{{@index}}].refid"
        type="hidden"
        value="{{rituel.refid}}"
        data-dtype="String"/>

    {{#with (getItem rituel.refid)}}
    <div class="item-name">
        <span data-item-id="{{rituel.refid}}">{{name}}</span>
    </div>
    {{/with}}

    <div class="item-control">
        <a class="item-roll" title="Roll Item"><i class="fas fa-dice-d20"></i></a>
    </div>

    <div class="item-control">
        <a class="item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
    </div>
    
    <div class="item-control">
        <a class="item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </div>

</li>