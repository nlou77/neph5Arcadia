<li class="item" data-item-id="{{tekhne.refid}}" data-item-science="coupe" data-item-collection="tekhnes">

    <input
        name="system.coupe.tekhnes.[{{@index}}].refid"
        type="hidden"
        value="{{tekhne.refid}}"
        data-dtype="String"/>

    {{#with (getItem tekhne.refid)}}
    <div class="item-name">
        <span data-item-id="{{tekhne.refid}}">{{name}}</span>
    </div>
    {{/with}}

    <div class="item-control">
        <a class="item-roll" title="Roll Item"><i class="fas fa-dice-d20"></i></a>
    </div>

    <div class="item-control">
        <a class="item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
    </div>
    
    <div class="item-control">
        <a class="item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </div>

</li>