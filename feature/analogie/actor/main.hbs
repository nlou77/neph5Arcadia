{{#if (displaySciencesOf actor 'analogie' true)}}
<ol class="cercles">

    {{#with actor.voieMagique}}
    <div class="voie">
        <label>{{name}}</label>
    </div>
    {{/with}}

    {{#if (displayScience actor "comprendre")}}
    {{#with (science actor "comprendre") as |degre|}}
    <div class="cercle">
        {{> "systems/neph5e/feature/analogie/actor/cercle.hbs" cercle="Comprendre" degre=degre cercle-id="comprendre"}}
        <ol class="all-focus">
        {{#each (focus ../actor 'comprendre') as |item|}}
            {{> "systems/neph5e/feature/analogie/actor/focus.hbs" item=item degre=degre}}
        {{/each}}
        </ol>
    </div>
    {{/with}}
    {{/if}}

    {{#if (displayScience actor "controler")}}
    {{#with (science actor "controler") as |degre|}}
