        {{/each}}
        </ol>
    </div>
    {{/with}}
    {{/if}}

    {{#each (cerclesOf 'analogie' false) as |name key|}}
    {{#if (displayScience ../actor key)}}
    {{#with (science ../actor key) as |degre|}}
    <div class="cercle">
        {{> "systems/neph5e/feature/analogie/actor/cercle.hbs" cercle=name degre=degre cercle-id=key}}
