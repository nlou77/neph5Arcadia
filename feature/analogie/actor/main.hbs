        {{/each}}
    </div>
    {{/with}}
    {{/if}}

    {{#each (cerclesOf 'analogie' false) as |name key|}}
    {{#if (displayScience ../actor key)}}
    {{#with (science ../actor key) as |degre|}}
    <div class="cercle">
        {{> "systems/neph5e/feature/analogie/actor/header.hbs" cercle=name degre=degre cercle-id=key sciencesOccultes=../../sciencesOccultes}}
        {{#each (focus ../../actor key) as |item|}}
            {{> "systems/neph5e/feature/analogie/actor/habitus.hbs" item=item degre=degre}}
