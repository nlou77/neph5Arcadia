<li class="item" data-item-id="{{technique.refid}}" data-item-science="baton" data-item-collection="techniques">

    <input
        name="system.baton.techniques.[{{@index}}].refid"
        type="hidden"
        value="{{technique.refid}}"
        data-dtype="String"/>

    {{#with (getItem technique.refid)}}
    <div class="item-name">
        <span data-item-id="{{technique.refid}}">{{name}}</span>
    </div>
    {{/with}}

    <div class="item-control">
        <a class="item-roll" title="Roll Item"><i class="fas fa-dice-d20"></i></a>
    </div>

    <div class="item-control">
        <a class="item-edit" title="Edit Item"><i class="fas fa-edit"></i></a>
    </div>
    
    <div class="item-control">
        <a class="item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
    </div>

</li>