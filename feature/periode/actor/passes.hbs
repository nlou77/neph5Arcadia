{{#unless (isEmptyCollection actor.passes)}}
<div class="passes">

    <div class="header">

        <img class="puce"/>

        <img class="separator"/>

        <span class="vecus-name">{{localize "NEPH5E.ressources"}}</span>

    </div>

    <ol class="body">

        {{#each actor.passes as |item|}}
        {{#if (ne item.degre 0)}}
        <li class="vecu item macro" data-macro="item" data-sid="{{item.sid}}">

            <div class="vecu-definition">

                {{#if ../../actor.system.options.degreGauche}}
                <label class="vecu-degre">{{item.degre}}</label>
                {{/if}}

                <label class="vecu-name open">{{item.name}}</label>

                {{#unless ../../actor.system.options.degreGauche}}
                <label class="vecu-degre">{{item.degre}}</label>
                {{/unless}}

                <a class="vecu-dice roll">
                    {{#if (eq ../from 'figure')}}
                    <i class="fas fa-dice-d20"></i>
                    {{else}}
                    <span>+{{fraterniteBonus item.degre}}</span>
                    {{/if}}
                </a>

            </div>

        </li>
        {{/if}}
        {{/each}}

    </ol>

</div>
{{/unless}}