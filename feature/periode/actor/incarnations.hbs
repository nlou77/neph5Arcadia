<div class="incarnations">

    <div class="incarnations-header">

        <div class="periode-courante">
            {{#if (isNull actor.system.periode)}}
            <label class="noperiode">{{actor.currentPeriode}}</label>
            {{else}}
            <div class="tooltip">
                <label class="periode">{{actor.currentPeriode}}</label>
                <span class="tooltiptext">{{localize "NEPH5E.periodeCourante"}}</span>
            </div>
            {{/if}}
        </div>

        {{#if (eq from "figure")}}
        <div class="all-points">

            <div class="tooltip points">
                <input
                    class="middle"
                    name="system.pointsIncarnations"
                    placeholder="0"
                    type="text"
                    value="{{system.pointsIncarnations}}"
                    data-dtype="Number"/>
                <span class="tooltiptext">{{localize "NEPH5E.pointsIncarnations"}}</span>
            </div>

            <div class="tooltip points">
                <input
                    name="system.sapienceDepensee"
                    placeholder="0"
                    type="text"
                    value="{{system.sapienceDepensee}}"
                    data-dtype="Number"/>
                <span class="tooltiptext">{{localize "NEPH5E.sapienceDepensee"}}</span>
            </div>

            <div class="tooltip points">
                <input
                    name="system.sapience"
                    placeholder="0"
                    type="text"
                    value="{{system.sapience}}"
                    data-dtype="Number"/>
                <span class="tooltiptext">{{localize "NEPH5E.sapienceCourante"}}</span>
            </div>

        </div>
        {{/if}}

    </div>

    {{#if actor.noPeriodes}}
    <div class="helpPeriode">
        {{#if (eq from "figure")}}
        <label>{{localize 'NEPH5E.aideIncarnations'}}</label>
        {{else}}
        <label>{{localize 'NEPH5E.aideHistorique'}}</label>
        {{/if}}
        <i class="fas fa-arrow-alt-circle-down fa-2xl"></i>
    </div>
    {{/if}}

    {{#each actor.periodes as |periode|}}
    {{#unless (and (not ../isGM) (not periode.embedded.actif))}}
    <ol class="incarnations-periodes">

        <il class="incarnations-periode item" data-sid="{{periode.original.sid}}">

            <div class="incarnations-periode-header">

                <img class="incarnations-periode-puce" src="systems/neph5e/assets/core/puce.webp"/>

                <img class="incarnations-periode-separator" src="systems/neph5e/assets/core/separator2.webp"/>

                <label class="incarnations-periode-name {{#unless periode.embedded.actif}}disabled{{/unless}}">{{periode.original.name}}: {{periode.original.contexte}}, {{periode.original.aube}}</label>

                <ul class="incarnations-periode-menu">

                    <li class="display">Détails</li>

                    <li>Editer</li>

                    <li class="activate">{{#if (and ../isGM periode.embedded.actif)}}Désactiver{{else}}Activer{{/if}}</li>

                    <li>Supprimer</li>

                </ul>

            </div>

            <div class="incarnations-periode-body"
                 {{#unless (or (includes ../elapsedPeriodes periode.original.id) (eq ../editedPeriode periode.original.sid))}}
                 style="display: none;"
                 {{/unless}}>
    <!--
                <ol class="incarnations-periode-members">

                    {{#each periode.embedded.actors as |actor|}}
                    <li class="incarnations-periode-member">



                    </li>
                    {{/each}}

                </ol>
    -->
                <ol class="incarnations-periode-vecus">

                    {{#each periode.embedded.items as |item|}}
                    {{#unless (isNull item.degre)}}
                    <li class="incarnations-periode-vecu item" data-id="{{item.id}}">
                        <div class="incarnations-periode-vecu-definition">
                            <label class="incarnations-periode-vecu-name">{{item.name}}</label>
                            <input
                                class="incarnations-periode-vecu-degre change-degre"
                                type="number"
                                value="{{item.degre}}"
                                data-dtype="Number"/>
                        </div>
                    </li>
                    {{/unless}}
                    {{/each}}

                </ol>
    <!--
                <ol class="incarnations-periode-all-focus">

                    <li class="incarnations-periode-focus">



                    </li>

                </div>
-->

            </div>

        </il>

    </ol>
    {{/unless}}
    {{/each}}

</div>