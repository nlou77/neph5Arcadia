<div class="header">

    <input

        {{#if (and debug isGM)}}
        type="text"
        class="uuid"
        {{else}}
        type="hidden"
        {{/if}}

        name="system.id"
        type="text"
        value="{{system.id}}"
        data-dtype="String"/>
   
    <div class="title">

        <input
            name="name"
            type="text"
            value="{{item.name}}"
            class="name"/>

        <img
            src="{{item.img}}"
            title="{{item.name}}"
            data-edit="img"
            class="image"/>

    </div>

</div>