<div style="display: flex; flex-direction: column; margin-top: 4px;">

    <span style="font-weight: bold; height: 26px;">{{localize title}} : </span>

    {{#unless (isEmptyCollection values)}}
    <ol>

        {{#each values as |item|}}
        <li class="item" data-item-id="{{item}}" style="display: flex; flex-direction: row; height: 20px;">

            <input
                name="{{../names}}.[{{@index}}]"
                type="hidden"
                value="{{item}}"
                data-dtype="String"/>

            {{#with (concat ../delete " fas fa-trash") as |class|}}
            <div style="margin-right: 10px;" >
                <a><i class="{{class}}"></i></a>
            </div>
            {{/with}}

            {{#with (getItem item)}}
            <div>
                <span class="hoverable" data-item-id="{{item}}">{{name}}</span>
            </div>
            {{/with}}

        </li>
        {{/each}}

    </ol>
    {{/unless}}

</div>