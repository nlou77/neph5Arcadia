<label class="hand-checkbox">
    <input
        {{#if value}}checked{{/if}}
        class="item-checkbox {{class}}"
        name="{{name}}"
        type="checkbox"
        data-dtype="Boolean"/>
    <i class="far fa-circle unchecked"></i>
    <i class="fas fa-circle checked"></i>
</label>

<label class="item-name">{{localize label}}</label>

