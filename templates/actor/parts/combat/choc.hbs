<li style="display:flex; flex-direction:row;margin-bottom:10px;">

    <input
        style="width: 30px; height:30px; margin-left: 20px; margin-right:10px;text-align:center;border-radius: 50%; flex-basis: 30px;flex-grow: 0; flex-shrink: 0;"
        name={{input-name}}
        type="text"
        value="{{input-value}}"
        data-dtype="Number"/>

    <label style="padding-top:9px; margin-left:10px;">{{localize name}}</label>

</li>