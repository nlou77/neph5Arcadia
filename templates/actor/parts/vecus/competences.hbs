<ol class="item-list">

    <div style="width:794px;margin-left:10px; display:flex; flex-direction:row; margin-top:10px; margin-bottom:10px; font-family: 'Modesto Condensed', 'Palatino Linotype', 'serif'; font-size: 20px; border-width:0px 0px 2px 0px;border-style:solid;border-color:black;">
        <span style="padding-left:5px;">{{localize "NEPH5E.competences"}}</span>
    </div>

    <div style="column-count:3;">

        {{#if data.simulacre.refid}}
            {{#with (getActor data.simulacre.refid)}}
                {{#each (getVecus data.data.id) as |vecu|}}
                <li class="item" data-item-id="{{vecu.id}}" data-item-type="vecu">

                    <label style="width:20px;">{{vecu.degre}}</label>

                    <div class="item-name edit-vecu-simulacre"
                        <span>{{name}}</span>
                    </div>

                    <div class="item-control">
                        <a class="roll-vecu-simulacre"><i class="fas fa-dice-d20"></i></a>
                    </div>

                </li>
                {{/each}}
            {{/with}}
            <hr>
        {{/if}}

        {{#each (getVecus data.id) as |item|}}
        <li class="item" data-item-id="{{id}}" data-item-type="vecu">

            <label style="width:20px;">{{item.degre}}</label>

            <div class="item-name edit-vecu">
                <span>{{name}}</span>
            </div>

            <div class="item-control">
                <a class="item-roll-vecu"><i class="fas fa-dice-d20"></i></a>
            </div>

        </li>
        {{/each}}

        <hr>

        {{#each (getCompetences data.id) as |competence|}}
        <li class="item" data-item-id="{{competence.refid}}" data-item-type="competence">

            <div style="width:20px;">
                <span>{{competence.degre}}</span>
            </div>

            <div class="item-name edit-competence">
                <span>{{competence.name}}</span>
            </div>

            <div class="item-control">
                <a class="item-roll"><i class="fas fa-dice-d20"></i></a>
            </div>

        </li>
        {{/each}}

    </div>

</ol>