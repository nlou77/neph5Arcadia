                    <div class="circleContent">{{vecu.degre}}</div>
                </div>
                <label class="item-name">{{name}}</label>
                <div class="item-control">
                    <a class="roll-vecu"><i class="fas fa-dice-d20"></i></a>
                </div>
            </li>
            {{/each}}

