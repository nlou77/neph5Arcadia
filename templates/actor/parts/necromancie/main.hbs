<input
    name="data.page.necromancie"
    type="hidden"
    value="true"
    data-dtype="Boolean"/>

<img src="systems/neph5e/assets/top-incarnations.webp" style="border:0px;width:814px;height:98px"/>

<ol class="item-list">

    {{#with (getScience data.id "fossoyeur") as |degre|}}
    {{#unless (eq degre 0)}}
        {{> "systems/neph5e/templates/actor/parts/necromancie/header.hbs" cercle="Fossyeur" degre=degre degre=degre useV3=../useV3}}
        {{#each ../data.necromancie.rites as |rite|}}
            {{#with (getItem rite.refid)}}
                {{#if (eq data.data.cercle "fossoyeur")}}
                    {{> "systems/neph5e/templates/actor/parts/necromancie/rite.hbs" rite=rite}}
                {{/if}}
            {{/with}}
        {{/each}}
    {{/unless}}
    {{/with}}

    {{#with (getScience data.id "embaumeur") as |degre|}}
