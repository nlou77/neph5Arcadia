        {{> "systems/neph5e/templates/actor/parts/necromancie/header.hbs" cercle="Imputrescible" degre=degre degre=degre useV3=../useV3}}
        {{#each ../data.necromancie.rites as |rite|}}
            {{#with (getItem rite.refid)}}
                {{#if (eq data.data.cercle "imputrescible")}}
                    {{> "systems/neph5e/templates/actor/parts/necromancie/rite.hbs" rite=rite}}
                {{/if}}
            {{/with}}
        {{/each}}
    {{/unless}}
    {{/with}}

</ol>