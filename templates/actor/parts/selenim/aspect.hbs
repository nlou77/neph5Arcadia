<div class="section">

    <div class="sectionRow">

        <div class="circle">
            <div class="circleContent">{{imago}}</div>
        </div>

        <div class="sectionTitle">
            <span class="sectionName">{{localize "NEPH5E.imago"}}</span>
        </div>

    </div>

    <ol class="item-list">

        {{#each data.imago.aspects as |aspect|}}
            {{#with (getItem aspect.refid)}}
            <li class="item" data-item-id="{{aspect.refid}}" data-item-science="imago" data-item-collection="aspects">

                <input
                    name="data.imago.aspects.[{{@index}}].refid"
                    type="hidden"
                    value="{{aspect.refid}}"
                    data-dtype="String"/>

                <div class="item-control" style="margin-left: 13px; margin-right:10px;">
                    <a class="item-delete"><i class="fas fa-trash"></i></a>
                </div>

                {{#with (getItem aspect.refid)}}
                <div class="item-name edit-aspect">
                    <span data-item-id="{{aspect.refid}}">{{name}}</span>
                </div>
                {{/with}}

                <label class="custom-checkbox" style="margin-right:10px;">
                    <input
                        class="item-checkbox" 
                        name="data.imago.aspects.[{{@index}}].active"
                        type="checkbox"
                        {{checked aspect.active}}
                        data-dtype="Boolean"/>
                    <i class="fas fa-eye-slash unchecked"></i>
                    <i class="fas fa-eye checked"></i>
                </label>

            </li>
            {{/with}}
        {{/each}}

    </ol>

</div>