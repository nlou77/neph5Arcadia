<input
    name="data.page.magie"
    type="hidden"
    value="true"
    data-dtype="Boolean"/>

<img src="systems/neph5e/assets/top-incarnations.webp" style="border:0px;width:814px;height:98px"/>

<div style="width:100%;margin-top:10px;">
    <div style="margin-left:auto;margin-right:auto;width:100%;display:flex; flex-direction: row; font-family: 'Modesto Condensed', 'Palatino Linotype', 'serif'; font-size: 25px; font-weight:bold;background-color: transparent;border: 0px;">
        {{#with (getItem data.magie.voie.refid)}}
        <label style="padding-bottom:3px; border: none; background-color: transparent; width:100%; text-align: center;">{{name}}</label>
        {{/with}}
    </div>
</div>

<ol class="item-list">

    {{#with (getScience data.id "basseMagie") as |degre|}}
    {{#unless (eq degre 0)}}
        {{> "systems/neph5e/templates/actor/parts/magie/header.hbs" cercle="Basse Magie" degre=degre}}
        {{#each ../data.magie.sorts as |sort|}}
            {{#with (getItem sort.refid)}}
                {{#if (eq data.data.cercle "basseMagie")}}
                    {{> "systems/neph5e/templates/actor/parts/magie/sort.hbs" sort=sort}}
                {{/if}}
            {{/with}}
        {{/each}}
    {{/unless}}
    {{/with}}

    {{#with (getScience data.id "hauteMagie") as |degre|}}
    {{#unless (eq degre 0)}}
        {{> "systems/neph5e/templates/actor/parts/magie/header.hbs" cercle="Haute Magie" degre=degre}}
        {{#each ../data.magie.sorts as |sort|}}
            {{#with (getItem sort.refid)}}
                {{#if (eq data.data.cercle "hauteMagie")}}
                    {{> "systems/neph5e/templates/actor/parts/magie/sort.hbs" sort=sort}}
                {{/if}}
            {{/with}}
        {{/each}}
    {{/unless}}
    {{/with}}

    {{#with (getScience data.id "grandSecret") as |degre|}}
    {{#unless (eq degre 0)}}
        {{> "systems/neph5e/templates/actor/parts/magie/header.hbs" cercle="Grand Secret" degre=degre}}
        {{#each ../data.magie.sorts as |sort|}}
            {{#with (getItem sort.refid)}}
                {{#if (eq data.data.cercle "grandSecret")}}
                    {{> "systems/neph5e/templates/actor/parts/magie/sort.hbs" sort=sort}}
                {{/if}}
            {{/with}}
        {{/each}}
    {{/unless}}
    {{/with}}

</ol>